*scrollBar: false

! FONT SETTINGS
!{{{

*font                : -*-terminesspowerline-bold-*-*-*-16-*-*-*-*-*-*-*
URxvt*font           : xft:Office Code Pro:style=Medium:size=16
URxvt*boldFont       :
URxvt*italicFont     :
URxvt*boldItalicFont :
URxvt*letterSpace    : 0
Xft.dpi              : 96
Xft.antialias        : true
Xft.rgba             : rgba
Xft.hinting          : true
Xft.hintstyle        : hintfull

!}}}

! KEY COMMANDS
! {{{

URxvt.keysym.Shift-Up      : command:\033]720;1\007
URxvt.keysym.Shift-Down    : command:\033]721;1\007
URxvt.keysym.Control-Up    : \033[1;5A
URxvt.keysym.Control-Down  : \033[1;5B
URxvt.keysym.Control-Left  : \033[1;5D
URxvt.keysym.Control-Right : \033[1;5C

! COPY PASTE
URxvt.perl-ext-common      : default,clipboard

URxvt.keysym.C-V           : perl:clipboard:paste
URxvt.keysym.C-C           : perl:clipboard:copy

! <C-9>, <C-0>, <C-+> and <C-=> URxvt on the fly font change
URxvt.keysym.C-0: command:\033]710;xft:Office Code Pro:style=Medium:size=16\007
URxvt.keysym.C-9: command:\033]710;-*-terminesspowerline-bold-*-*-*-16-*-*-*-*-*-*-*\007

! }}}

! URxvt Settings
! {{{

! URxvt*termName          : xterm-256color
URxvt*loginShell        : true
URxvt*skipScroll        : false
URxvt*scrollTtyOutput   : false
URxvt*scrollTtyKeypress : true
URxvt*scrollWithBuffer  : false
URxvt*buffered          : true
URxvt*saveLines         : 1500
URxvt*urgentOnBell      : false
URxvt*cursorBlink       : 0
URxvt*shadowColor       : #000
URxvt.urlLauncher       : firefox-developer
URxvt.visualBell        : false
URxvt.iso14755          : false

URxvt*skipBuiltinGlyphs : true
URxvt*transparent       : false

!}}}

