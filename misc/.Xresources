*scrollBar: false

! FONT SETTINGS
!{{{

*font             : -*-terminesspowerline-bold-*-*-*-14-*-*-*-*-*-*-*
URxvt*font        : -*-terminesspowerline-bold-*-*-*-14-*-*-*-*-*-*-*
URxvt*boldFont    :
URxvt*letterSpace : 0

!}}}

! KEY COMMANDS
! {{{

URxvt.keysym.Shift-Up     : command:\033]720;1\007
URxvt.keysym.Shift-Down   : command:\033]721;1\007

URxvt.urlLauncher         : firefox-developer
URxvt.visualBell          : false
URxvt.iso14755            : false

! COPY PASTE
URxvt.perl-ext-common     : clipboard

URxvt.clipboard.copycmd   : xsel -pkb
URxvt.clipboard.pastecmd  : xsel -b

URxvt.keysym.C-C          : perl:clipboard:copy
URxvt.keysym.C-V          : perl:clipboard:paste

URxvt.clipboard.autocopy  : false


! <C-9>, <C-0>, <C-+> and <C-=> URxvt on the fly font change
URxvt.keysym.C-0: command:\033]710;-*-terminesspowerline-bold-*-*-*-14-*-*-*-*-*-*-*\007
URxvt.keysym.C-9: command:\033]710;xft:Office Code Pro:style=Medium D,Regular:antialias=true:size=14\007

! }}}

! URxvt Settings
! {{{

URxvt*termName          : xterm-256color
URxvt*loginShell        : true
URxvt*skipScroll        : false
URxvt*scrollTtyOutput   : false
URxvt*scrollTtyKeypress : true
URxvt*scrollWithBuffer  : false
URxvt*buffered          : true
!URxvt*buffered          : false
UURxvt*saveLines        : 1500
URxvt*urgentOnBell      : false
URxvt*cursorBlink       : 0

URxvt*skipBuiltinGlyphs : false
URxvt*transparent       : false
!URxvt*inheritPixmap    : true

!}}}

! COLORS
! {{{
!! black
*color0          : #424242
*color8          : #7D7D7D

!!! red
*color1          : #B63E50
*color9          : #FF2E4C

!! green
*color2          : #6B8F5C
*color10         : #ACE594

!! yellow/orange
*color3          : #C8370B
*color11         : #FF5724

!! blue
*color4          : #31789C
*color12         : #2EB9FF

!! purple
*color5          : #733E86
*color13         : #D183E7

!! cyan
*color6          : #007866
*color14         : #2DFADB

!! white
*color7          : #8D9599
*color15         : #F1F3F4

*borderColor     : #1A1A1A
*background      : #1A1A1A
*foreground      : #F1F3F4
*cursorColor     : #FF2E4C
*internalBorder  : 15

! }}}

! vim:filetype=xdefaults
