*scrollBar: false

! FONT SETTINGS
!{{{

*font             : -*-terminesspowerline-bold-*-*-*-14-*-*-*-*-*-*-*
URxvt*font        : -*-terminesspowerline-bold-*-*-*-14-*-*-*-*-*-*-*
URxvt*boldFont    :
URxvt*letterSpace : 0
Xft.dpi           : 96
Xft.antialias     : true
Xft.rgba          : rgba
Xft.hinting       : true
Xft.hintstyle     : hintfull

!}}}

! KEY COMMANDS
! {{{

URxvt.keysym.Shift-Up      : command:\033]720;1\007
URxvt.keysym.Shift-Down    : command:\033]721;1\007
URxvt.keysym.Control-Up    : \033[1;5A
URxvt.keysym.Control-Down  : \033[1;5B
URxvt.keysym.Control-Left  : \033[1;5D
URxvt.keysym.Control-Right : \033[1;5C

URxvt.urlLauncher          : firefox-developer
URxvt.visualBell           : false
URxvt.iso14755             : false

! COPY PASTE
URxvt.perl-ext-common      : clipboard

URxvt.keysym.C-V           : perl:clipboard:paste
URxvt.keysym.C-C           : perl:clipboard:copy

! <C-9>, <C-0>, <C-+> and <C-=> URxvt on the fly font change
URxvt.keysym.C-0: command:\033]710;xft:Office Code Pro:style=Medium,Regular:antialias=true:size=16\007
URxvt.keysym.C-9: command:\033]710;-*-terminesspowerline-bold-*-*-*-14-*-*-*-*-*-*-*\007

! }}}

! URxvt Settings
! {{{

URxvt*termName          : xterm-256color
URxvt*loginShell        : true
URxvt*skipScroll        : false
URxvt*scrollTtyOutput   : false
URxvt*scrollTtyKeypress : true
URxvt*scrollWithBuffer  : false
URxvt*buffered          : true
UURxvt*saveLines        : 1500
URxvt*urgentOnBell      : false
URxvt*cursorBlink       : 0
URxvt*textShadow        : true
URxvt*shadowColor       : #000

URxvt*skipBuiltinGlyphs : true
URxvt*transparent       : false
!URxvt*inheritPixmap    : true

!}}}

! COLORS
! {{{
!! BLACK
*color0          : #1A1A1A
*color8          : #7D7D7D

!!! RED
*color1          : #B63E50
*color9          : #FF2E4C

!! GREEN
*color2          : #6E8B62
*color10         : #7ED65A

!! YELLOW/ORANGE
*color3          : #9C4E37
*color11         : #FF5724

!! BLUE
*color4          : #31789C
*color12         : #2EB9FF

!! PURPLE
*color5          : #53497F
*color13         : #7562D4

!! CYAN
*color6          : #316E64
*color14         : #38C5AF

!! WHITE
*color7          : #5B7785
*color15         : #F1F3F4

!! SPECIAL
*borderColor     : #1A1A1A
*background      : #1A1A1A
*foreground      : #F1F3F4
*cursorColor     : #FF2E4C
*internalBorder  : 10

! }}}

! vim:filetype=xdefaults
