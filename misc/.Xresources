*scrollBar: false

! FONT SETTINGS
!{{{

*font             : -*-terminesspowerline-*-*-*-*-12-*-*-*-*-*-*-*
URxvt*font        : -*-terminesspowerline-*-*-*-*-12-*-*-*-*-*-*-*
URxvt*boldFont    :
URxvt*letterSpace : 0
! URxvt*boldFont    : -*-terminesspowerline-*-*-*-*-12-*-*-*-*-*-*-*

! <C-9>, <C-0>, <C-+> and <C-=> URxvt on the fly font change
URxvt.keysym.C-0: command:\033]710;-*-terminesspowerline-*-*-*-*-12-*-*-*-*-*-*-*\007
URxvt.keysym.C-9: command:\033]710;-*-terminesspowerline-*-*-*-*-14-*-*-*-*-*-*-*\007
URxvt.keysym.C-minus: command:\033]710;xft:Office Code Pro:style=Medium D,Regular:antialias=true:pixelsize=12\007
URxvt.keysym.C-equal: command:\033]710;xft:Office Code Pro:style=Medium D,Regular:antialias=true:pixelsize=16\007

!}}}

! KEY COMMANDS
! {{{

URxvt.keysym.Shift-Up     : command:\033]720;1\007
URxvt.keysym.Shift-Down   : command:\033]721;1\007

URxvt.urlLauncher         : firefox-developer
URxvt.visualBell          : false
URxvt.iso14755            : false

! COPY PASTE
URxvt.perl-ext-common     : clipboard

URxvt.clipboard.copycmd   : clipit
URxvt.clipboard.pastecmd  : clipit -c

URxvt.keysym.C-C          : perl:clipboard:copy
URxvt.keysym.C-V          : perl:clipboard:paste

URxvt.clipboard.autocopy  : false

! }}}

! URxvt Settings
! {{{

URxvt*termName          : xterm-256color
URxvt*loginShell        : true
URxvt*skipScroll        : false
URxvt*scrollTtyOutput   : false
URxvt*scrollTtyKeypress : true
URxvt*scrollWithBuffer  : false
URxvt*buffered          : true
!URxvt*buffered          : false
UURxvt*saveLines        : 1500
URxvt*urgentOnBell      : false
URxvt*cursorBlink       : 0

URxvt*skipBuiltinGlyphs : false
URxvt*transparent       : false
!URxvt*inheritPixmap    : true

!}}}

! COLORS
! {{{
!! black
*color7           : #424242
*color15          : #7D7D7D

!!! red
*color1           : #B63E50
*color9           : #FF2E4C

!! yellow/orange
*color3           : #DB9F62
*color11          : #FFA03D

!! purple
*color5           : #853F63
*color13          : #FF91C9

!! blue
*color4           : #31789C
*color12          : #2EB9FF

!! green
*color2           : #6B8F5C
*color10          : #ACE594

!! cyan
*color6           : #007866
*color14          : #2DFADB

!! white
*color0           : #8D9599
*color8           : #F1F3F4

*borderColor      : #1A1A1A
*background       : #1A1A1A
*foreground       : #F1F3F4
*cursorColor      : #FF2E4C
*internalBorder   : 15

! }}}

! vim:filetype=xdefaults
