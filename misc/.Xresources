*scrollBar: false

! FONT SETTINGS
!{{{

*font                : -*-terminesspowerline-medium-*-*-*-16-*-*-*-*-*-*-*
URxvt*font           : xft:Terminess Powerline:style=Regular:size=11
! URxvt*font           : xft:Monoid:size=10
URxvt*boldFont       :
URxvt*italicFont     :
URxvt*boldItalicFont :
URxvt*letterSpace    : 0
URxvt*lineSpace      : 0
Xft.dpi              : 96
Xft.antialias        : true
Xft.rgba             : rgba
Xft.hinting          : true
Xft.hintstyle        : hintfull

!}}}

! KEY COMMANDS
! {{{

URxvt.keysym.Shift-Up      : command:\033]720;1\007
URxvt.keysym.Shift-Down    : command:\033]721;1\007
URxvt.keysym.Control-Up    : \033[1;5A
URxvt.keysym.Control-Down  : \033[1;5B
URxvt.keysym.Control-Left  : \033[1;5D
URxvt.keysym.Control-Right : \033[1;5C

! COPY PASTE
URxvt.perl-ext-common      : default,clipboard

URxvt.keysym.C-V           : perl:clipboard:paste
URxvt.keysym.C-C           : perl:clipboard:copy

! <C-9>, <C-0>, <C-+> and <C-=> URxvt on the fly font change
URxvt.keysym.C-0: command:\033]710;xft:Monoid:style=Regular:size=10\007
URxvt.keysym.C-9: command:\033]710;-*-terminesspowerline-medium-*-*-*-16-*-*-*-*-*-*-*\007

! For roguelikes
URxvt.keysym.C-8: command:\033]710;-*-terminesspowerline-medium-*-*-*-18-*-*-*-*-*-*-*\007

! }}}

! URxvt Settings
! {{{

! URxvt*termName          : xterm-256color
URxvt*loginShell        : true
URxvt*skipScroll        : false
URxvt*scrollTtyOutput   : false
URxvt*scrollTtyKeypress : true
URxvt*scrollWithBuffer  : false
URxvt*buffered          : true
URxvt*saveLines         : 1000
URxvt*urgentOnBell      : false
URxvt*cursorBlink       : 0
URxvt*shadowColor       : #000
URxvt.urlLauncher       : firefox-developer
URxvt.visualBell        : false
URxvt.iso14755          : false

URxvt*skipBuiltinGlyphs : true
URxvt*transparent       : false

!}}}

! ROFI SETTINGS
! {{{

rofi.hide-scrollbar      : true
rofi.lines               : 5
rofi.location            : 0

rofi.font                : Terminess Powerline 11

! Foreground
rofi.hlfg                : #262626
rofi.fg-active           : #8FAFD7
rofi.hlfg-active         : #262626

! Background
! Alternating Rows
rofi.bgalt               : #2A2A2A

rofi.bg-active           : #1C1C1C
rofi.hlbg-active         : #444444
rofi.hlbg                : #FF8700

! Border Color
rofi.bc                  : #8FAFD7

! Border Width
rofi.bw                  : 1

! Width in Screen %
rofi.width               : 25
rofi.padding             : 15

rofi.lazy-filter-limit   : 100000
rofi.terminal            : urxvtc
rofi.fuzzy               : true

rofi.key-window          : mod4+shift+Tab
rofi.key-run             : mod4+r
rofi.kb-remove-word-back : Control+w
rofi.levenshtein-sort    : true

! }}}

! COLORS
! {{{

! Black
*.color0:     #1C1C1C
*.color8:     #444444

! Red
*.color1:     #AF5F5F
*.color9:     #FF8700

! Green
*.color2:     #5F875F
*.color10:    #87AF87

! Yellow
*.color3:     #87875F
*.color11:    #FFFFAF

! Blue
*.color4:     #5F87AF
*.color12:    #8FAFD7

! Magenta/Purple
*.color5:     #5F5F87
*.color13:    #8787AF

! Cyan
*.color6:     #5F8787
*.color14:    #5FAFAF

! White
*.color7:     #6C6C6C
*.color15:    #BCBCBC

!! SPECIAL
*borderColor     : #262626
*background      : #262626
*foreground      : #BCBCBC
*cursorColor     : #5FAFAF
*internalBorder  : 10

! }}}

