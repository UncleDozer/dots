*scrollBar: false

! FONT SETTINGS
!{{{

*font                : -*-terminesspowerline-bold-*-*-*-16-*-*-*-*-*-*-*
! URxvt*font           : xft:Office Code Pro:style=Regular:size=14
URxvt*font           : xft:Monoid:size=12
URxvt*boldFont       :
URxvt*italicFont     :
URxvt*boldItalicFont :
URxvt*letterSpace    : -2
URxvt*lineSpace      : 2
Xft.dpi              : 96
Xft.antialias        : true
Xft.rgba             : rgba
Xft.hinting          : true
Xft.hintstyle        : hintfull

!}}}

! KEY COMMANDS
! {{{

URxvt.keysym.Shift-Up      : command:\033]720;1\007
URxvt.keysym.Shift-Down    : command:\033]721;1\007
URxvt.keysym.Control-Up    : \033[1;5A
URxvt.keysym.Control-Down  : \033[1;5B
URxvt.keysym.Control-Left  : \033[1;5D
URxvt.keysym.Control-Right : \033[1;5C

! COPY PASTE
URxvt.perl-ext-common      : default,clipboard

URxvt.keysym.C-V           : perl:clipboard:paste
URxvt.keysym.C-C           : perl:clipboard:copy

! <C-9>, <C-0>, <C-+> and <C-=> URxvt on the fly font change
URxvt.keysym.C-0: command:\033]710;xft:Monoid:style=Regular:size=15\007
URxvt.keysym.C-9: command:\033]710;-*-terminesspowerline-bold-*-*-*-16-*-*-*-*-*-*-*\007

! }}}

! URxvt Settings
! {{{

! URxvt*termName          : xterm-256color
URxvt*loginShell        : true
URxvt*skipScroll        : false
URxvt*scrollTtyOutput   : false
URxvt*scrollTtyKeypress : true
URxvt*scrollWithBuffer  : false
URxvt*buffered          : true
URxvt*saveLines         : 1500
URxvt*urgentOnBell      : false
URxvt*cursorBlink       : 0
URxvt*shadowColor       : #000
URxvt.urlLauncher       : firefox-developer
URxvt.visualBell        : false
URxvt.iso14755          : false

URxvt*skipBuiltinGlyphs : true
URxvt*transparent       : false

!}}}

! ROFI SETTINGS
! {{{

! rofi.color-enabled       : true
rofi.lines               : 5
rofi.location            : 0

rofi.font                : Monoid 15

rofi.hlfg                : #1A1A1A
rofi.fg-active           : #7ED65A
rofi.hlfg-active         : #1A1A1A

rofi.hlbg                : #2EB9FF
rofi.bgalt               : #2A2A2A
rofi.bg-active           : #1A1A1A
rofi.hlbg-active         : #7ED65A

rofi.bc                  : #2EB9FF

rofi.bw                  : 1
rofi.width               : 25
rofi.padding             : 10

rofi.lazy-filter-limit   : 100000
rofi.terminal            : urxvtc
rofi.fuzzy               : true

rofi.key-window          : mod4+shift+Tab
rofi.key-run             : mod4+r
rofi.kb-remove-word-back : Control+w
rofi.levenshtein-sort    : true

! }}}

