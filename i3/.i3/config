# i3 config file (v4)
# Please see http://i3wm.org/docs/userguide.html for a complete reference!
#
# Author: UncleDozer

# Variables
#{{{

set $mod       Mod4
set $alt       Mod1
set $run       exec python ~/.i3/runorfocus.py
set $music     "spotify"
set $browser   "firefox-developer"
set $terminal  "urxvtc"

set $default_gaps_inner 45
set $default_gaps_outer 15

set $red         #ff2e4c
set $blue        #2eb9ff
set $cyan        #8fffee
set $black       #1a1a1a
set $white       #f1f3f4
set $green       #a1ff7a
set $yellow      #ffa03d
set $magenta     #ff91c9

set $grey        #b3bdc2
set $dim_red     #b63e50
set $dim_grey    #2a2a2a
set $dim_blue    #60a8cd
set $dim_cyan    #3ad9c2
set $dim_green   #ace594
set $dim_yellow  #db9f62
set $dim_magenta #d3649d

set $ws1 "1:"
set $ws2 "2:"
set $ws3 "3:"
set $ws4 "4:"
set $ws5 "5:"

set $col_width      "155px"
set $col_height     "225px"
set $drop_width     "900px"
set $drop_height    "200px"
set $scratch_width  "500px"
set $scratch_height "700px"
set $launcher       dmenu_run -i -l -fn 'Office Code Pro-10' 20 -p "^_" -sb "$blue" -nf "$green" -nb "$black"

#}}}

# Settings
workspace_auto_back_and_forth yes

# Font
font pango:Office Code Pro Medium, Icons 10

# Smart Borders
smart_borders on

# Disable titlebar
new_window pixel

# Hotkeys
#{{{
floating_modifier $mod

# Terminal
bindsym $mod+Return exec $terminal

# Run Browser
bindsym $mod+q exec $browser

# start dmenu (a program launcher)
bindsym $mod+r exec dmenu_run -y 24 -q -i -l 10 -uh 2 -p "^_" -sb "$blue" -uc "$green" -nf "$white" -nb "$black" -sf "#fff" -fn 'Office Code Pro Medium-14'
# bindsym $mod+r exec --no-startup-id i3-dmenu-desktop

gaps inner $default_gaps_inner
gaps outer $default_gaps_outer

# Window Control
# {{{

# Kill Window
bindsym $mod+c kill

# change focus
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
bindsym $mod+h focus left

# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right
bindsym $mod+Shift+h move left

# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# split in horizontal orientation
bindsym $mod+p split h

# split in vertical orientation
bindsym $mod+o split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

# focus the child container
bindsym $mod+Shift+a focus child

# switch to workspace
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace 6
bindsym $mod+7 workspace 7
bindsym $mod+8 workspace 8
bindsym $mod+9 workspace 9
bindsym $mod+0 workspace 10
bindsym $mod+Tab workspace back_and_forth
workspace $ws5 output HDMI0
workspace $ws1 output DVI0
workspace $ws2 output DVI0
workspace $ws3 output DVI0
workspace $ws4 output DVI0


# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace 6
bindsym $mod+Shift+7 move container to workspace 7
bindsym $mod+Shift+8 move container to workspace 8
bindsym $mod+Shift+9 move container to workspace 9
bindsym $mod+Shift+0 move container to workspace 10

# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+q exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# Modes
#{{{

# resize window (you can also use the mouse for that)
mode "" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym l resize shrink width 3 px or 3 ppt
        bindsym k resize grow height 3 px or 3 ppt
        bindsym j resize shrink height 3 px or 3 ppt
        bindsym h resize grow width 3 px or 3 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 3 px or 3 ppt
        bindsym Down resize grow height 3 px or 3 ppt
        bindsym Up resize shrink height 3 px or 3 ppt
        bindsym Right resize grow width 3 px or 3 ppt

        bindsym $mod+j gaps outer current plus 5
        bindsym $mod+k gaps outer current minus 5
        bindsym $mod+l gaps inner current plus 5
        bindsym $mod+h gaps inner current minus 5
        bindsym $mod+plus gaps inner current set $default_gaps_inner
        bindsym $mod+minus gaps outer current set $default_gaps_outer

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+$alt+r mode ""

#}}}
#}}}
#}}}

# Bar config
#{{{

bar {
  font pango:Office Code Pro Medium, Icons 13
  status_command i3status -c ~/.i3/i3status.conf
  strip_workspace_numbers yes
  height 25
  position top
  tray_output DVI-0
  id bar-1
  #tray_output nne
  mode dock

  colors {
    separator $green
    background $black
    statusline $blue
    focused_workspace $green $green $black
    active_workspace $dim_grey $dim_grey $dim_blue
    inactive_workspace $black $black $grey
    urgent_workspace $red $red $black
  }
}

#}}}

# Window Settings
#{{{

# Remove titlebar unless in stacking or tabbed mode
for_window  [class="^.*"] border pixel 1
for_window  [class="(?i)urxvt"] border pixel 0
for_window  [class="(?i)urxvtc"] border pixel 0

# Scratchpad and Dropdown Config
#{{{

# Move focused window to scratchpad
bindsym     $mod+m move scratchpad

# Toggle scratchpad
bindsym     $mod+n scratchpad show

# Create a scratchpad terminal
bindsym     $mod+v exec "urxvt -name scratchpad"
for_window  [instance="scratchpad"] floating enable;
for_window  [instance="scratchpad"] move scratchpad; [instance="scratchpad"] scratchpad show; move position 660px 275px; resize shrink height 10000px; resize grow height $scratch_height; resize shrink width 10000px; resize grow width $scratch_width; move scratchpad
bindsym     $mod+x [instance="scratchpad"] scratchpad show

# Create a dropdown terminal
bindsym     $mod+Shift+z exec "urxvt -name dropdown"
for_window  [instance="dropdown"] floating enable;
for_window  [instance="dropdown"] move scratchpad; [instance="dropdown"] scratchpad show; move position 460px 30px; resize shrink height 10000px; resize grow height $drop_height; resize shrink width 10000px; resize grow width $drop_width; move scratchpad
bindsym     $mod+z [instance="dropdown"] scratchpad show

# Create a dropin color grabber
bindsym     $mod+Shift+d exec "colorgrab"
for_window  [instance="colorgrab"] move scratchpad; [instance="colorgrab"] scratchpad show; move position 75px 75px; resize shrink height 10000px; resize grow height $col_height; resize shrink width 10000px; resize grow width $col_width; move scratchpad
bindsym     $mod+d [instance="colorgrab"] scratchpad show

# Create a spotify window in tab 3
bindsym     $mod+Shift+m $run "Spotify" spotify
assign      [class="(?i)spotify"] $ws3

# Set speedcrunch (calculator) to floating
for_window  [class="(?i)speedcrunch"] floating enable;

# Floaters
for_window  [class="(?i)skype"] floating enable;

#Colors
client.focused $blue $blue $green $red
client.focused_inactive $black $black #888888 #292d2e
client.unfocused $black $black #888888 #292d2e
client.urgent $red $red #ffffff #900000

#}}}
# }}}

