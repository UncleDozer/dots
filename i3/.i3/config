# Variables
# {{{

set $mod       Mod4
set $alt       Mod1
set $run       exec python ~/.i3/runorfocus.py
set $music     "spotify"
set $browser   "firefox-developer"
set $terminal  "urxvtc"

set $default_gaps_inner 45
set $default_gaps_outer 15

set $red         #FF2E4C
set $blue        #2EB9FF
set $cyan        #8FFFEE
set $black       #1A1A1A
set $white       #F1F3F4
set $green       #A1FF7A
set $yellow      #FFA03D
set $magenta     #FF91C9

set $grey        #B3BDC2
set $dim_red     #B63E50
set $dim_grey    #2A2A2A
set $dim_blue    #60A8CD
set $dim_cyan    #3AD9C2
set $dim_green   #ACE594
set $dim_yellow  #DB9F62
set $dim_magenta #D3649D

# Home
set $ws1 "1:"
# Code
set $ws2 "2:"
# Music
set $ws3 "3:"
# Chat
set $ws4 "4:"
# Internet
set $ws5 "5:"
# Running
set $ws6 "6:"
# Steam
set $ws7 "7:"
# Misc
set $ws8 "8:"
# Misc
set $ws9 "9:"
# Misc
set $ws10 "10:"

set $col_width      "155px"
set $col_height     "225px"
set $drop_width     "900px"
set $drop_height    "200px"
set $scratch_width  "500px"
set $scratch_height "700px"
set $launcher       dmenu_run -i -l -fn 'Office Code Pro-10' 20 -p "^_" -sb "$blue" -nf "$green" -nb "$black"

# }}}

# Settings
workspace_auto_back_and_forth yes

# Font
font pango:Office Code Pro Bold, Icons 10

# Smart Borders
smart_borders on

# Disable titlebar
new_window pixel

# Hotkeys
#{{{
floating_modifier $mod

# Terminal
bindsym $mod+Return exec $terminal

# Run Browser
bindsym $mod+q exec $browser

gaps inner $default_gaps_inner
gaps outer $default_gaps_outer

# Window Control
# {{{

# Kill Window
bindsym $mod+c kill

# change focus
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
bindsym $mod+h focus left

# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right
bindsym $mod+Shift+h move left

# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# split in horizontal orientation
bindsym $mod+p split h

# split in vertical orientation
bindsym $mod+o split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

# focus the child container
bindsym $mod+Shift+a focus child

# switch to workspace
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10
bindsym $mod+Tab workspace back_and_forth
workspace $ws5 output HDMI-0
workspace $ws1 output DVI-0
workspace $ws2 output DVI-0
workspace $ws3 output DVI-0
workspace $ws4 output DVI-0
workspace $ws6 output DVI-0


# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10

# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+q exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# Modes
#{{{

# resize window (you can also use the mouse for that)
mode "" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym l resize shrink width 3 px or 3 ppt
        bindsym k resize grow height 3 px or 3 ppt
        bindsym j resize shrink height 3 px or 3 ppt
        bindsym h resize grow width 3 px or 3 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 3 px or 3 ppt
        bindsym Down resize grow height 3 px or 3 ppt
        bindsym Up resize shrink height 3 px or 3 ppt
        bindsym Right resize grow width 3 px or 3 ppt

        bindsym $mod+j gaps outer current plus 5
        bindsym $mod+k gaps outer current minus 5
        bindsym $mod+l gaps inner current plus 5
        bindsym $mod+h gaps inner current minus 5
        bindsym $mod+plus gaps inner current set $default_gaps_inner
        bindsym $mod+minus gaps outer current set $default_gaps_outer

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+$alt+r mode ""

#}}}
#}}}
#}}}

# Bar config
#{{{

bar {
  font pango:Office Code Pro Bold, Icons 14
  status_command i3status -c ~/.i3/i3status.conf
  strip_workspace_numbers yes
  height 25
  position top
  tray_output DVI-0
  id bar-1
  #tray_output nne
  mode dock

  colors {
    separator  $green
    background $black
    statusline $blue
# --------------------|    BG    | BORDER  |   FG    |------
# ----------------------------------------------------------
    focused_workspace  $green    $green    $black
    active_workspace   $dim_grey $dim_grey $dim_blue
    inactive_workspace $black    $black    $grey
    urgent_workspace   $red      $red      $black
  }
}

#}}}

# Window Settings
#{{{

# Remove titlebar unless in stacking or tabbed mode
for_window  [class="^.*"] border pixel 2
for_window  [class="(?i)urxvt"] border pixel 0
for_window  [class="(?i)urxvtc"] border pixel 0

# Scratchpad and Dropdown Config
#{{{

# Move focused window to scratchpad
bindsym     $mod+m move scratchpad

# Toggle scratchpad
bindsym     $mod+n scratchpad show

# Create a scratchpad terminal
bindsym     $mod+v exec "urxvtc -name scratchpad"
for_window  [instance="scratchpad"] floating enable;
for_window  [instance="scratchpad"] move scratchpad; [instance="scratchpad"] scratchpad show; move position 660px 275px; resize shrink height 10000px; resize grow height $scratch_height; resize shrink width 10000px; resize grow width $scratch_width; move scratchpad
bindsym     $mod+x [instance="scratchpad"] scratchpad show

# Create a dropdown terminal
bindsym     $mod+Shift+z exec "urxvtc -name dropdown"
for_window  [instance="dropdown"] floating enable;
for_window  [instance="dropdown"] move scratchpad; [instance="dropdown"] scratchpad show; move position 460px 30px; resize shrink height 10000px; resize grow height $drop_height; resize shrink width 10000px; resize grow width $drop_width; move scratchpad
bindsym     $mod+z [instance="dropdown"] scratchpad show

# Create a dropin color grabber
bindsym     $mod+Shift+d exec "colorgrab"
for_window  [instance="colorgrab"] move scratchpad; [instance="colorgrab"] scratchpad show; move position 75px 75px; resize shrink height 10000px; resize grow height $col_height; resize shrink width 10000px; resize grow width $col_width; move scratchpad
bindsym     $mod+d [instance="colorgrab"] scratchpad show

# Create a spotify window in tab 3
bindsym     $mod+Shift+m $run "Spotify" spotify
assign      [class="(?i)spotify"] $ws3

# Set speedcrunch (calculator) to floating
for_window  [class="(?i)speedcrunch"] floating enable;

# Floaters
# for_window  [class="(?i)skype"] floating enable;

# Full Screen
for_window  [class="(?i)Mplayer"] fullscreen enable

#Colors
client.focused $blue $blue $green $red
client.focused_inactive $black $black #888888 #292d2e
client.unfocused $black $black #888888 #292d2e
client.urgent $red $red $white #900000

# }}}

# }}}

