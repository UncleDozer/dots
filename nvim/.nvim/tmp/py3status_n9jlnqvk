tztime local {
    format = "%A %B %d   %H:%M:%S"
}

order += "volume master"
order += "disk /"
order += "load"
order += "tztime local"

disk / {
    format = "%avail"
}

load {
    format = "%1min"
}

volume master {
    mixer_idx = "0"
    device = "default"
    mixer = "Master"
    format_muted = " %volume"
    format = "  %volume"
}

