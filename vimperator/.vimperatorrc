" Options
set gui=none
set defsearch=google
set ignorecase
set smartcase
set suggestengines=google
set focuscontent
set hintchars=fjdkslaghrueiwovncm
set hinttimeout=1500
set followhints=0
set animations
set status=tabcount,input,location,bookmark,history,position
set complete=slShbt
set verbose=5
set editor='pynvim'

let smoozie_scroll_interval="100"

" Mappings
let mapleader=","
nnoremap ; :
nnoremap <S-j> :back<CR>
nnoremap <S-k> :forward<CR>
nnoremap <S-h> :tabprevious<CR>
nnoremap <S-l> :tabnext<CR>
nnoremap <Leader>x :tabclose<CR>
nnoremap x :tabclose<CR>
nnoremap <S-x> :undo<CR>
nnoremap <Leader>sov :source ~/.vimperatorrc<CR>
nnoremap <Leader>/ :nohlsearch<CR>
nnoremap >> ]]
nnoremap << [[
nnoremap <Leader>t :set gui=invtabs<CR>
nnoremap <C-t> :tabgroups switch<Space><TAB>
nnoremap <Leader>us :set invusermode<CR>:styletoggle -name usermodestyle<CR>
nnoremap <Leader>du :extdisable uBlock<CR>
nnoremap <Leader>eu :extenable uBlock<CR>
nnoremap <Leader>dr :extdisable Reddit Enhancement Suite<CR>
nnoremap <Leader>er :extenable Reddit Enhancement Suite<CR>
nnoremap <Leader>dl :extdisable LastPass<CR>
nnoremap <Leader>el :extenable LastPass<CR>
nnoremap h 15h
nnoremap l 15l
inoremap <C-e> <C-i>


" Colors
hi! clear
" Hints
hi HintElem background-color: #1a1a1a; color: white; box-shadow: 0 0 3px 1px rgba( 0,0,0,.25 ); border-radius: 2px;
hi HintActive background-color: #7ed65a; color: white; box-shadow: 0 0 3px 1px rgba( 0,0,0,.25 ); border: none; border-radius: 2px;
hi Hint font-family: 'Monoid' !important; font-size: 15px !important; font-weight: 600; text-transform: uppercase; color: white; background-color: #5B92FA; border-color: ButtonShadow; border-width: 0px; border-style: solid; padding: 0px 3px 0px 3px; box-shadow: 0 0 3px 1px rgba( 0,0,0,.25 ); border-radius: 1px; z-index: 99999999;

" CommandLine
hi CmdLine background-color: #1a1a1a; color: #f1f3f4; font-weight: 400;
hi CmdLine>* font-family: 'Monoid'

hi CompGroup background-color: #1a1a1a; color: #f1f3f4; font-weight: 400;

hi CompItem background-color: #1a1a1a; color: #f1f3f4; font-weight: 400;
hi CompItem[selected] color: #2eb9ff !important; background-color: rgb( 35,35,35 );

hi CompTitle background-color: #1a1a1a; color: #a1ff7a; font-weight: 400; border-width: 0px; text-shadow: none !important; box-shadow: 0 -4px 5px 0px rgba( 0,0,0,.5 );
hi CompTitle>* color: #2EB9FF; border: none; border-top: none; border-bottom: none; margin-left: 5px; height: 15px;

hi ErrorMsg background-color: #ff2e4c; color: #f1f3f4; font-weight: 400; text-shadow: none !important;
hi Filter background-color: none; color: #2eb9ff;
hi StatusLine background-color: #1a1a1a; color: #7ed65a; border-color: #1a1a1a; outline: 0; text-shadow: none !important; font-family: 'Monoid'; font-size: 16px;
hi URL color: #ace594;
hi Normal background-color: #1a1a1a; color: #ace594; border-top: 1px solid #1a1a1a;
hi LineNr color: #b3bdc2;
hi ContentSeparator display:none;
hi Message background-color: #1a1a1a
hi Bell border: none; background-color: #1A1A1A;
hi Boolean color: #b63e50; background-color: #1A1A1A;

" On startup, define my readability stylesheet ( for use with usermode )
style -name usermodestyle file:,file*,file:*,http*,https* body{ margin:40px auto; max-width:850px; line-height:1.6; font-size:1.3em; color:#F1F3F4; padding:0 10px; background: #1A1A1A; } a{ color:#2EB9FF !important; } a:visited{color:#31789C !important;} h1, h2, h3, h4, h5, h6{ line-height:1.2; } pre{max-width: 850px !important;}
styledisable -name usermodestyle

" vim:filetype=vim
